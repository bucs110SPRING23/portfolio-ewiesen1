import pygame
pygame.init()

screen = pygame.display.set_mode()

#screen is just a variable
#pygame is the module being used; modules that contain modules are called frameworks
#display is the submodule of pygame

screen.fill("red")
pygame.display.flip()
pygame.time.wait(1000)
screen.fill("blue")
pygame.display.flip()
pygame.time.wait(1000)
screen.fill("green")
pygame.display.flip()
pygame.time.wait(1000)

#[x,y,width,height]
dimensions =  [300, 300, 250, 250]
pygame.draw.rect(screen, "pink", dimensions)
pygame.display.flip()
pygame.time.wait(5000)

dimensions = [10, 20, 250,250]
pygame.draw.rect(screen, "blue", dimensions)
pygame.display.flip()
pygame.time.wait(5000)